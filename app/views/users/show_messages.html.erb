<%
content_for :title, t('users.all_messages_for_user', name: @user.username)
content_for :h1, t('users.all_messages_for_user', name: @user.username)
content_for(:body_id, "users-messages")
content_for(:body_classes, 'users messages ' + user_to_class_name(@user))
%>

<%= paginate @messages %>

<% @messages.each do |m|
m.thread.message = m %>
<article class="thread threadlist">
  <%= message_header(m.thread, m, show_votes: true, id: false) %>
</article>
<% end %>

<%= paginate @messages %>
